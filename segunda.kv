MDScreen:
    name: "segunda"
    MDFloatLayout:
        md_bg_color: 224, 248, 244, 1


        MDTopAppBar:
            title: "Elevation 4"
            elevation: 3
            title: "[size=17][i][color=#f3d815]SEGUNDA[/size][/i][/color]"
            pos_hint: {"center_x": 0.5, "center_y": 0.95}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "tela"
