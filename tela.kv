MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 41/255, 135/255, 168/255, 1

        MDTopAppBar:
            title: "Elevation 4"
            elevation: 4
            title: "[size=17][i][color=#f3d815]Atividade do Arthur[/size][/i][/color]"
            left_action_items: [["menu"]]
            right_action_items: [["close-octagon", lambda x: app.fechar()]]
            pos_hint: {"center_x": 0.5, "center_y": 0.95}

        Button:
            text: "SEGUNDA"
            size_hint: .66, .065
            pos_hint: {"center_x":.5, "center_y": .80}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "segunda"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
